<body>
    <!--[if lt IE 8]><div class="panel chromeframe">Your browser is <strong>outdated!</strong> <a href="http://browsehappy.com/">Please upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</div><![endif]-->
    <div class="row">
        <div class="large-12 columns" id="main">

            <!-- Navigation -->
            <nav class="top-bar">
                <ul class="title-area">
                    <!-- Title Area -->
                    <li class="name">
                        <h1>
                            <a href= "@Href("~/Admin/Default")">Admin Home</a>
                        </h1>
                    </li>
                    <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
                </ul>
                <section class="top-bar-section">
                    <!-- Right Nav Section -->
                    <ul class="right">
                        <li><a href= "@Href("~/Default")">Main Home</a></li>
                        @if (Permissions.User(Can.CreateUser))
                        {
                            <li><a href="~/Admin/Users/AddUser">Add User</a></li>
                        }
                        @if (Permissions.User(Can.EditMenuItems, Can.DeleteUser))
                        {
                            <li><a href="~/Admin/Users/List">Manage User</a></li>
                        }
                        @if (Permissions.User(Can.CreateRole))
                        {
                            <li><a href="~/Admin/Users/AddRole">Add Role</a></li>
                        }
                        @if (Permissions.User(Can.ManageRolesPermissions))
                        {
                            <li><a href="~/Admin/Users/RolePermissions">Manage Role Permissions</a></li>
                        }
                    </ul>
                </section>
            </nav>
            <!-- End Top Bar -->

            <!-- End Navigation -->
            <div class="small-8 large-centered columns">
                <div class="centered-text">
                    <header>
                        <div id="logged-in">
                            @if (WebSecurity.IsAuthenticated)
                            {
                                <span>You are logged in as @WebSecurity.CurrentUserName | <a href="~/Admin/Logout">Logout</a></span>                
                            }
                        </div>
                        <h2>Admin Panel</h2>
                    </header>
                </div>
                @RenderBody()
            </div>
            <!-- Footer -->
            <footer class="row">
                <div class="large-12 columns hide-for-small">
                </div>
            </footer>
            <!-- End Footer -->
        </div>
    </div>

    <!-- Included JS Files -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>        window.jQuery || document.write('<script src="\js/release/vendor/jquery-1.9.1.min.js"><\/script>')</script>
    @System.Web.Optimization.Scripts.Render("~/bundles/js")

    @RenderSection("baseScript", required: false)

</body>
