    <!-- Included CSS Files -->
    @System.Web.Optimization.Styles.Render("~/bundles/foundation", "~/bundles/style")
    <link href="@Href("favicon.ico")" rel="shortcut icon" type="image/x-icon" />
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
	@System.Web.Optimization.Styles.Render("~/bundles/cssie")
